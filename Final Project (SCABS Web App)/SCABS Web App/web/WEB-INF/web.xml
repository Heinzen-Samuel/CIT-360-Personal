<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.LoginController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserRegistration</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.RegistrationController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistration</servlet-name>
        <url-pattern>/userRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecordCalories</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.CaloriesController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecordCalories</servlet-name>
        <url-pattern>/recordCalories</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CaptureScab</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.CaptureLoadController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptureScab</servlet-name>
        <url-pattern>/captureScab</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CatchScab</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.CapturePickController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatchScab</servlet-name>
        <url-pattern>/catchScab</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowScabs</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.ShowController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowScabs</servlet-name>
        <url-pattern>/showScabs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.cit360projectmark4.controller.LogoutController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>